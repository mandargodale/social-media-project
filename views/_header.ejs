<header>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <a
            href="/"
            class="navbar-brand mb-0 h1">
            <img
                class="navbar-brand mb-0 h1"
                src="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b2/Bootstrap_logo.svg/512px-Bootstrap_logo.svg.png"
                width="70"
                height="70"
            />
            SPM
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                <% if(locals.user) { %>
                    <img src="<%= user.profilePicture %>" alt="<%= user.name %>" width="100px">
                    <li class="nav-item active"><a href="/user/profile/<%= user.id %>" class="nav-link active"><%= user.name %></a></li>
                    <li class="nav-item active"><a href="/user/sign-out" class="nav-link active">Sign Out</a></li>
                    <% } else { %>
                        <li><a href="/user/sign-in" class="navbar-brand mb-0 h1">Sign In</a></li>
                        <li><a href="/user/sign-up" class="navbar-brand mb-0 h1">Sign Up</a></li>
                <% } %>
            </ul>
        </div>
    </nav>
</header>